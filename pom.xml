<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <!-- Model version -->
    <modelVersion>4.0.0</modelVersion>

    <!-- Project information -->
    <groupId>com.example</groupId>        <!-- Your projectâ€™s package namespace -->
    <artifactId>MyJavaApp</artifactId>    <!-- Your project name -->
    <version>1.0-SNAPSHOT</version>       <!-- Version of your project -->
    <packaging>jar</packaging>            <!-- This creates a JAR file -->
    
    <!-- Project metadata (optional) -->
    <name>MyJavaApp</name>               <!-- The name of your project -->
    <description>Sample Java Maven Project</description>

    <!-- Properties (specify Java version, etc.) -->
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>  <!-- Java version for source code -->
        <maven.compiler.target>1.8</maven.compiler.target>  <!-- Java version for generated bytecode -->
    </properties>

    <!-- Dependencies -->
    <dependencies>
        <!-- JUnit dependency for testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <!-- You can add more dependencies based on your project needs -->
    </dependencies>

    <!-- Build settings -->
    <build>
        <plugins>
            <!-- Compiler plugin for specifying Java version -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <!-- Surefire plugin for running unit tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Repository details (if needed) -->
    <!-- <repositories>
        Add any external repositories if you are fetching dependencies from private or other locations.
    </repositories> -->
</project>
